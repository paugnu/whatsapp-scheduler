{
  "manifest_version": 2,
  "name": "WhatsApp Message Scheduler",
  "version": "1.0.0",
  "description": "Schedule messages in WhatsApp Web.",
  "default_locale": "en",
  "icons": {
    "16": "icons/calendar-schedule.svg",
    "32": "icons/calendar-schedule.svg",
    "48": "icons/calendar-schedule.svg",
    "128": "icons/calendar-schedule.svg"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "whatsapp-scheduler@example.com",
      "strict_min_version": "102.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "author": "Pau"
}
